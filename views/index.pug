extends layout

block content								
	h1.link
		a(target='_new' href='https://btg.cryptopros.us') Bitcoin Gold Pools 
			div
			img(src='https://btg.cryptopros.us/static/cryptopros.png', height='36px', style='margin-top: 10px;')

	h2 Tips: Don't share your private keys or seeds to any service that you don't fully trust.
	table.sortable.container
		thead
			tr.header
				th Pool
				th Miners
				th Hashrate
				th Fee
				th Blocks
				th Last Block
				th Last Block Mined
				th Status
				tbody
				if (pools.length)
				for pool in pools
					tr(class=pool.name)
						td(data-th="Pool" class="link")
							a(target='_new' href=pool.url) 
								b #{pool.name}
						td(data-th="Miners") #{pool.miners}
						td(sorttable_customkey=pool.hashnum data-th="Hashrate") #{pool.hash} 
						td(data-th="Fee") #{pool.fee}
						td(data-th="Blocks") #{pool.blocks}
						td(data-th="Last Block") #{pool.netblocks}
						td= pool.mined
						if pool.status == "Live" 
							td(data-th="Status" class="pool-live") #{pool.status}
						else
							td(data-th="Status") Blocked/Dead

	footer
		h3 This site is powered by the open source 
			a(target='_blank', href='https://github.com/litwi1rm/pool-list') pool-list
			span  project created by Ryan and the BTG Community
			div
			br
			on Please Contact Ryan or what the cuss in the BTG Slack for any needed updates
			br
			br
			on Last Block Mined is WIP and not accurate, Python wizards needed!
